<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/runa"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1280:720"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/plus"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/cctv1" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="-"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="@id/runa"
                app:layout_constraintLeft_toRightOf="@id/runa"
                app:layout_constraintRight_toLeftOf="@id/lenna"
                app:layout_constraintTop_toTopOf="@id/runa" />

            <ImageView
                android:id="@+id/lenna"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1280:720"
                app:layout_constraintLeft_toRightOf="@id/plus"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/cctv2" />

            <TextView
                android:id="@+id/equal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="="
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="@id/result"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/result"
                app:layout_constraintTop_toTopOf="@id/result" />

            <ImageView
                android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                app:layout_constraintDimensionRatio="1280:720"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/runa"
                tools:src="@drawable/cctv1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>