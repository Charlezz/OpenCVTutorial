<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/runa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/plus"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/runa" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="+"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@id/runa"
            app:layout_constraintLeft_toRightOf="@id/runa"
            app:layout_constraintRight_toLeftOf="@id/lenna"
            app:layout_constraintTop_toTopOf="@id/runa" />

        <ImageView
            android:id="@+id/lenna"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toRightOf="@id/plus"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/lenna" />

        <TextView
            android:id="@+id/equal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="="
            android:textSize="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/result"
            app:layout_constraintTop_toTopOf="@id/result"
            app:layout_constraintBottom_toBottomOf="@id/result"
            />

        <ImageView
            android:id="@+id/result"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/runa"
            tools:src="@drawable/runa"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>