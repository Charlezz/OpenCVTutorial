<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/image1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_image1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이미지1"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/image1"
                app:layout_constraintRight_toRightOf="@id/image1"
                app:layout_constraintTop_toBottomOf="@id/image1" />

            <TextView
                android:id="@+id/txt_image2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이미지2"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/image2"
                app:layout_constraintRight_toRightOf="@id/image2"
                app:layout_constraintTop_toBottomOf="@id/image2" />

            <ImageView
                android:id="@+id/and"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/txt_image1"
                app:layout_constraintRight_toRightOf="@id/txt_image1"
                app:layout_constraintTop_toBottomOf="@id/txt_image1" />

            <ImageView
                android:id="@+id/or"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/txt_image2"
                app:layout_constraintRight_toRightOf="@id/txt_image2"
                app:layout_constraintTop_toBottomOf="@id/txt_image2"/>

            <TextView
                android:id="@+id/txt_and"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="AND"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/and"
                app:layout_constraintRight_toRightOf="@id/and"
                app:layout_constraintTop_toBottomOf="@id/and" />

            <TextView
                android:id="@+id/txt_or"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/or"
                app:layout_constraintRight_toRightOf="@id/or"
                app:layout_constraintTop_toBottomOf="@id/or" />


            <ImageView
                android:id="@+id/xor"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/txt_and"
                app:layout_constraintRight_toRightOf="@id/txt_and"
                app:layout_constraintTop_toBottomOf="@id/txt_and" />

            <ImageView
                android:id="@+id/not"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/txt_or"
                app:layout_constraintRight_toRightOf="@id/txt_or"
                app:layout_constraintTop_toBottomOf="@id/txt_or"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="XOR"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/xor"
                app:layout_constraintRight_toRightOf="@id/xor"
                app:layout_constraintTop_toBottomOf="@id/xor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NOT (이미지1)"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/not"
                app:layout_constraintRight_toRightOf="@id/not"
                app:layout_constraintTop_toBottomOf="@id/not" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</layout>